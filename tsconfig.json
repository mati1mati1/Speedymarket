{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@services/*": ["src/services/*"],
      "@api/*": ["src/api/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "include": [
    "src",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/App.tsx",
    "app/(customer)/purchaseHistory.tsx",
    "app/(customer)/shoppingList/shoppingCartList.tsx",
    "app/(customer)/startShopping/selectSupermarketAndList.tsx",
    "app/(customer)/shoppingList/map-viewer/[customerMapViewer].tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
