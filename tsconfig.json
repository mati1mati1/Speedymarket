{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components/*"],
      "@styles": ["src/styles/*"],
      "@services": ["src/services/*"],
      "@api": ["src/api/*"],
      "@models": ["src/models/*"]
        }
  },
  "include": [
    "src",
    "src/**/*",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "src/components/**/*.tsx",
    "src/services/**/*.ts",
    "src/api/**/*.ts",
    "src/styles/**/*.css",
    "app/(customer)/purchaseHistory.tsx",
    "app/(customer)/shoppingList/shoppingCartList.tsx",
    "app/(customer)/shopping/selectSupermarketAndList.tsx",
    "app/(customer)/shoppingList/map-viewer/[customerMapViewer].tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base"
}
